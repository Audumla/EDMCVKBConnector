{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "EDMC: Bootstrap Dev Environment",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/bootstrap_dev_env.py"
            ],
            "problemMatcher": [],
            "detail": "Set up development environment: clone EDMC, create venv, install deps, link plugin"
        },
        {
            "label": "EDMC: Bootstrap + Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/bootstrap_dev_env.py",
                "--run-tests"
            ],
            "problemMatcher": [],
            "detail": "Bootstrap environment and run all tests"
        },
        {
            "label": "EDMC: Run EDMC (DEV - Isolated Config)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/run_edmc_from_dev.py"
            ],
            "problemMatcher": [],
            "detail": "Run EDMC from dev repository with isolated config (won't touch your installed EDMC settings)"
        },
        {
            "label": "EDMC: Run EDMC (DEV - System Config)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/run_edmc_from_dev.py",
                "--use-system-config"
            ],
            "problemMatcher": [],
            "detail": "Run EDMC from dev repository using your actual EDMC configuration"
        },
        {
            "label": "EDMC: Package Plugin",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/package_plugin.py"
            ],
            "problemMatcher": [],
            "detail": "Create distributable ZIP file in dist/ directory"
        },
        {
            "label": "EDMC: UI Bootstrap (Rule Editor)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "test/ui_bootstrap_runner.py"
            ],
            "problemMatcher": [],
            "detail": "Launch the rule editor UI for manual testing"
        },
        {
            "label": "EDMC: Signal Catalog Editor",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/signal_catalog_editor.py"
            ],
            "problemMatcher": [],
            "detail": "Launch the signal catalog editor UI"
        },
        {
            "label": "Release: Prepare preview (Codex backend)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/release_workflow.py",
                "--strict",
                "--preview-only",
                "--summarize-backend",
                "codex"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "detail": "Rebuild CHANGELOG.md and release preview using Codex summarization"
        },
        {
            "label": "Release: Prepare preview (Claude CLI backend)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/release_workflow.py",
                "--strict",
                "--preview-only",
                "--summarize-backend",
                "claude-cli"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "detail": "Rebuild CHANGELOG.md and release preview using Claude CLI summarization"
        },
        {
            "label": "Release: Trigger release-please workflow",
            "type": "shell",
            "command": "gh",
            "args": [
                "workflow",
                "run",
                "release-please.yml"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "detail": "Trigger the release-please GitHub Actions workflow (creates/updates release PR)"
        },
        {
            "label": "Release: Full workflow (auto bump, Codex backend)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/release_workflow.py",
                "--strict",
                "--summarize-backend",
                "codex",
                "--bump",
                "auto"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "detail": "Prepare changelog preview, then trigger release-please with automatic bump selection"
        },
        {
            "label": "Release: Full workflow (patch bump, Codex backend)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/release_workflow.py",
                "--strict",
                "--summarize-backend",
                "codex",
                "--bump",
                "patch"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "detail": "Prepare changelog preview, then trigger release-please forcing next patch version"
        },
        {
            "label": "Release: Full workflow (minor bump, Codex backend)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/release_workflow.py",
                "--strict",
                "--summarize-backend",
                "codex",
                "--bump",
                "minor"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "detail": "Prepare changelog preview, then trigger release-please forcing next minor version"
        },
        {
            "label": "Release: Full workflow (major bump, Codex backend)",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "scripts/release_workflow.py",
                "--strict",
                "--summarize-backend",
                "codex",
                "--bump",
                "major"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "detail": "Prepare changelog preview, then trigger release-please forcing next major version"
        }
    ]
}
