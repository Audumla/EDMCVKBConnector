[
  {
    "title": "Combat Mode Shift Control",
    "enabled": true,
    "description": "When HUD is in combat/weapons mode, send shift1. Otherwise clear shift1.",
    "when": {
      "all": [
        {
          "signal": "hardpoints",
          "op": "eq",
          "value": "deployed"
        }
      ]
    },
    "then": [
      {
        "vkb_set_shift": ["Shift1"]
      }
    ],
    "else": [
      {
        "vkb_clear_shift": ["Shift1"]
      }
    ]
  }
]
