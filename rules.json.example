[
  {
    "id": "landing gear down",
    "enabled": true,
    "when": {
      "source": "dashboard",
      "event": "Status",
      "all": [
        {
          "flags": {
            "equals": {
              "FlagsLandingGearDown": true
            }
          }
        }
      ]
    },
    "then": {
      "vkb_set_shift": ["Subshift3"]
    },
    "else": {
      "vkb_clear_shift": ["Subshift3"]
    }
  },
  {
    "id": "hardpoints_deployed_in_ship",
    "enabled": true,
    "when": {
      "source": "dashboard",
      "all": [
        {
          "flags": {
            "all_of": [
              "FlagsHardpointsDeployed",
              "FlagsInMainShip"
            ]
          }
        },
        {
          "flags2": {
            "none_of": [
              "Flags2OnFoot"
            ]
          }
        }
      ]
    },
    "then": {
      "log": "Hardpoints deployed (in ship)"
    }
  },
  {
    "id": "galaxy_map_opened",
    "enabled": true,
    "when": {
      "source": "dashboard",
      "all": [
        {
          "gui_focus": {
            "equals": "GuiFocusGalaxyMap"
          }
        }
      ]
    },
    "then": {
      "log": "Galaxy map opened"
    }
  },
  {
    "id": "example_shift",
    "enabled": false,
    "when": {
      "source": "dashboard",
      "all": [
        {
          "flags": {
            "all_of": [
              "FlagsInSRV"
            ]
          }
        }
      ]
    },
    "then": {
      "vkb_set_shift": [
        "Shift1",
        "Subshift3"
      ]
    }
  },
  {
    "id": "Combat Mode",
    "enabled": true,
    "when": {
      "source": "dashboard",
      "event": "Status",
      "all": [
        {
          "flags": {
            "equals": {
              "FlagsAnalysisMode": false
            }
          }
        }
      ]
    },
    "then": {
      "vkb_set_shift": ["Shift1"]
    },
    "else": {
      "vkb_clear_shift": ["Shift1"]
    }
  }
]
