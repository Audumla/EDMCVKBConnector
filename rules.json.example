[
  {
    "title": "Hardpoints Deployed",
    "enabled": true,
    "when": {
      "all": [
        {
          "signal": "hardpoints",
          "op": "eq",
          "value": "deployed"
        }
      ]
    },
    "then": [
      {
        "vkb_set_shift": ["Shift1"]
      }
    ],
    "else": [
      {
        "vkb_clear_shift": ["Shift1"]
      }
    ]
  },
  {
    "title": "Galaxy Map Opened",
    "enabled": true,
    "when": {
      "all": [
        {
          "signal": "gui_focus",
          "op": "eq",
          "value": "GalaxyMap"
        }
      ]
    },
    "then": [
      {
        "vkb_set_shift": ["Shift2"]
      }
    ],
    "else": [
      {
        "vkb_clear_shift": ["Shift2"]
      }
    ]
  },
  {
    "title": "Emergency Situation",
    "enabled": true,
    "when": {
      "any": [
        {
          "signal": "flag_in_danger",
          "op": "eq",
          "value": "danger"
        },
        {
          "signal": "flag_low_health",
          "op": "eq",
          "value": "low"
        },
        {
          "signal": "flag_overheating",
          "op": "eq",
          "value": "overheating"
        }
      ]
    },
    "then": [
      {
        "vkb_set_shift": ["Subshift1"]
      }
    ],
    "else": [
      {
        "vkb_clear_shift": ["Subshift1"]
      }
    ]
  },
  {
    "title": "Combat Mode with Shields",
    "enabled": true,
    "when": {
      "all": [
        {
          "signal": "hud_mode",
          "op": "eq",
          "value": "combat"
        },
        {
          "signal": "flag_shields_up",
          "op": "eq",
          "value": "up"
        }
      ]
    },
    "then": [
      {
        "vkb_set_shift": ["Subshift2"]
      }
    ],
    "else": [
      {
        "vkb_clear_shift": ["Subshift2"]
      }
    ]
  },
  {
    "title": "Docked or Landed",
    "enabled": true,
    "when": {
      "all": [
        {
          "signal": "docking_state",
          "op": "in",
          "value": ["docked", "landed"]
        }
      ]
    },
    "then": [
      {
        "vkb_set_shift": ["Subshift3"]
      },
      {
        "log": "Ship is docked or landed"
      }
    ],
    "else": [
      {
        "vkb_clear_shift": ["Subshift3"]
      }
    ]
  },
  {
    "title": "SRV Mode",
    "enabled": true,
    "when": {
      "all": [
        {
          "signal": "transport",
          "op": "eq",
          "value": "srv"
        }
      ]
    },
    "then": [
      {
        "vkb_set_shift": ["Shift1", "Subshift4"]
      }
    ],
    "else": [
      {
        "vkb_clear_shift": ["Subshift4"]
      }
    ]
  },
  {
    "title": "Combined Condition: All and Any",
    "enabled": true,
    "when": {
      "all": [
        {
          "signal": "transport",
          "op": "eq",
          "value": "ship"
        }
      ],
      "any": [
        {
          "signal": "fsd_state",
          "op": "eq",
          "value": "charging"
        },
        {
          "signal": "fsd_state",
          "op": "eq",
          "value": "jump_active"
        }
      ]
    },
    "then": [
      {
        "vkb_set_shift": ["Subshift5"]
      }
    ],
    "else": [
      {
        "vkb_clear_shift": ["Subshift5"]
      }
    ]
  }
]
